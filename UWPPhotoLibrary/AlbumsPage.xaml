<Page Background="Beige"
    x:Class="UWPPhotoLibrary.AlbumsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPPhotoLibrary"
    xmlns:data="using:UWPPhotoLibrary.Model"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d">

    <Grid>
        <GridView Name="AlbumsPage1" ItemsSource="{x:Bind Albums}" IsItemClickEnabled="True"
                              SelectionMode="None" >
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="data:Album">
                    <StackPanel>
                        <Image Name="AlbumsImage" Height="80" Width="80" Source="{x:Bind IconFile}" 
                                   Margin="40,45,40,10"/>
                        <TextBlock Name ="AlbumName" Text="{x:Bind AlbumType}"
                                       FontSize="20" FontFamily="Bold" Margin="45, 0, 15, 0"/>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>

    </Grid>
</Page>
